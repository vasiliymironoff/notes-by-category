<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesByCategory" parent="Theme.Design.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/red</item>
        <item name="actionBarStyle">@color/light</item>
        <item name="colorControlNormal">@color/light</item>
    </style>

    <style name="TabLayoutStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabTextColor">@color/light</item>
        <item name="android:background">@color/lightdark</item>
    </style>
</resources>