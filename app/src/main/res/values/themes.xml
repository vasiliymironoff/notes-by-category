<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesByCategory" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@color/light</item>
        <item name="colorControlNormal">@color/dark</item>

        <item name="android:navigationBarColor">@color/grey</item>
        <item name="android:colorAccent">@color/red</item>

    </style>





    <style name="TabLayoutStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabSelectedTextColor">@color/red</item>
    </style>
</resources>


